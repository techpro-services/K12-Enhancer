{
    "manifest_version": 2,

    "name": "K12 Enhancer by TechPro Services",
    "short_name": "K12 Enhancer",
    "description": "The K12 Enhancer extension by TechPro Services applies a green gradient to your messages, modernizes NewRow's icon, and allows you to chat with your classmates in school discussions in near-realtime. Please do not copy or edit any part of this extension.",
    "version": "1.5.6",
    "author": "TechPro Services <phineasm4065@utahvirtual.org>",
    "homepage_url": "https://techpro-services.github.io/",
    "icons": {
        "128": "img/logo_static.png"
    },

    "browser_action": {
        "default_icon": {
            "19": "img/logo_static.png"
        },
        "default_title": "K12 Enhancer"
    },
    "content_scripts": [
    {
    "matches": ["https://learning.k12.com/*"],
    "js": ["dn/dn.js"],
    "run_at": "document_end"
    },
    {
    "matches": ["https://learning.k12.com/d2l/le/*/discussions/threads/*"],
    "js": ["dc/inject.js", "dc/chat.js", "dc/socket.io.js"],
    "css": ["dc/main.css"],
    "run_at": "document_end"
    },
    {
    "matches": ["https://smart.newrow.com/*", "https://www.newrow.com/"],
    "js": ["newrow/newrow.js"]
    }
    ],
    "permissions": ["webRequest", "storage"]
}
